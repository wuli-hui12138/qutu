// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Image {
  id          Int       @id @default(autoincrement())
  url         String
  thumb       String
  title       String
  description String?
  status      String    @default("PENDING") // PENDING, APPROVED, REJECTED
  categories  Category[]
  tags        Tag[]
  views       Int       @default(0)
  likes       Int       @default(0)
  isBanner    Boolean   @default(false)
  isVisible   Boolean   @default(true)
  createdAt   DateTime  @default(now())
  topicId     Int?
  topic       Topic?    @relation(fields: [topicId], references: [id])
}

model Category {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  images Image[]
}

model Tag {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  images Image[]
}

model Topic {
  id          Int      @id @default(autoincrement())
  title       String   @unique
  description String?
  cover       String?
  creator     String?  // 可以存放用户名或用户等级标识
  status      String   @default("PENDING") // PENDING, APPROVED, REJECTED
  sortOrder   Int      @default(0)         // Higher values show first
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  images      Image[]
}
