// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Image {
  id          Int       @id @default(autoincrement())
  url         String
  thumb       String
  blurData    String?   // Base64 LCP placeholder
  title       String
  description String?
  status      String    @default("PENDING") // PENDING, APPROVED, REJECTED
  categories  Category[]
  tags        Tag[]
  views       Int       @default(0)
  likes       Int       @default(0)
  isBanner    Boolean   @default(false)
  isVisible   Boolean   @default(true)
  createdAt   DateTime  @default(now())
  topicId     Int?
  topic       Topic?    @relation(fields: [topicId], references: [id])
  authorId    Int?
  author      User?     @relation("UserImages", fields: [authorId], references: [id])
  favorites   Favorite[]
  history     History[]
}

model User {
  id          Int       @id @default(autoincrement())
  openid      String    @unique
  nickname    String?
  avatar      String?
  role        String    @default("USER") // USER, ADMIN
  createdAt   DateTime  @default(now())
  images      Image[]   @relation("UserImages")
  favorites   Favorite[]
  history     History[]
  following   Follow[]  @relation("Following")
  followers   Follow[]  @relation("Followers")
}

model Follow {
  id          Int       @id @default(autoincrement())
  followerId  Int
  followingId Int
  follower    User      @relation("Following", fields: [followerId], references: [id])
  following   User      @relation("Followers", fields: [followingId], references: [id])
  createdAt   DateTime  @default(now())

  @@unique([followerId, followingId])
}

model Favorite {
  id        Int      @id @default(autoincrement())
  userId    Int
  imageId   Int
  user      User     @relation(fields: [userId], references: [id])
  image     Image    @relation(fields: [imageId], references: [id])
  createdAt DateTime @default(now())

  @@unique([userId, imageId])
}

model History {
  id        Int      @id @default(autoincrement())
  userId    Int
  imageId   Int
  user      User     @relation(fields: [userId], references: [id])
  image     Image    @relation(fields: [imageId], references: [id])
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@unique([userId, imageId])
}

model Category {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  images Image[]
}

model Tag {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  images Image[]
}

model Topic {
  id          Int      @id @default(autoincrement())
  title       String   @unique
  description String?
  cover       String?
  creator     String?  // 可以存放用户名或用户等级标识
  status      String   @default("PENDING") // PENDING, APPROVED, REJECTED
  sortOrder   Int      @default(0)         // Higher values show first
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  images      Image[]
}
