// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Image {
  id          Int       @id @default(autoincrement())
  url         String
  thumb       String
  title       String
  description String?
  status      String    @default("PENDING") // PENDING, APPROVED, REJECTED
  categories  Category[]
  tags        Tag[]
  views       Int       @default(0)
  likes       Int       @default(0)
  createdAt   DateTime  @default(now())
}

model Category {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  images Image[]
}

model Tag {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  images Image[]
}

model Banner {
  id        Int      @id @default(autoincrement())
  title     String?
  imageUrl  String
  link      String?
  isActive  Boolean  @default(true)
  order     Int      @default(0)
  createdAt DateTime @default(now())
}
